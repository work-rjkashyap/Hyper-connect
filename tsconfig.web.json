{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/env.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.tsx",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",


    "paths": {
      "@/*": ["src/*"],
      "@renderer/*": [
        "src/renderer/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  }
}
